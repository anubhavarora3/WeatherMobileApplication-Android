<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/wallet_holo_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy_night"/>

        <TextView
            android:id="@+id/temprature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 C"
            android:textSize="44sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Overcast Conditions with chances of Rain"
            style="@style/TextAppearance.Weather"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tempHigh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="100"
            android:gravity="center_vertical"
            style="@style/TextAppearance.Weather"
            android:drawableLeft="@drawable/ic_keyboard_arrow_up_black_24dp"/>

        <TextView
            android:id="@+id/tempLow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="100"
            android:gravity="center_vertical"
            style="@style/TextAppearance.Weather"
            android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"/>

    </LinearLayout>


</LinearLayout>